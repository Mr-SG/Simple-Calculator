#include<stdio.h>
void main()
{
	int a,b,add,sub,div,mul,cal;
	printf("Enter the value of a=");
	scanf("%d",&a);
	printf("enter the value of b=");
	scanf("%d",&b);
	printf("press 1 for addition\n");
		printf("press 2 for substraction\n");
         	printf("press 3 for division\n");
	    	   printf("press 4 for multiplication\n");
	    	   scanf("%d",&cal);
	switch(cal)
	{
		case 1:
			add=a+b;
			printf("      You want to add this items, Showing the Result....\n");
			printf("          ......\n");
			printf("          ........\n");
			printf("      Result of addition is %d",add);
			break;
		case 2:
			sub=a-b;
			printf("      You want to subtract this items, Showing the Result....\n");
			printf("         ......\n");
			printf("         ........\n");
			printf("      Result of substraction is % d",sub);
			break;
	    case 3:
	    	div=a/b;
	    	printf("      You want to devide this items, Showing the Result....\n");
			printf("          ......\n");
			printf("          ........\n");
	    	printf("      Result of division is %d",div);
	    	break;
	    case 4:
	        mul=a*b;
	        printf("      You want to multiply this items, Showing the Result....\n");
			printf("            .....\n");
			printf("           ........\n");
	        	printf("   Result of multiplication is %d",mul);
	        	break;
	        	default:
	        		printf("none");
			
	}
}
